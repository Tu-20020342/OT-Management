<odoo>
    <data>
        <record id="ot_request_form_view" model="ir.ui.view">
            <field name="name">ot.request.form.view</field>
            <field name="model">ot.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_in_progress" class="oe_highlight" states="draft" string="Submit" type="object" help="Move Appointment to In Progress state"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,pm_approved,dl_approved,refused"/>
                    </header>
                    <group name="info">
                            <group>
                                <field name="project"/>
                                <field name="manager_approve"/>
                                <field name="ot_month"/>
                            </group>
                            <group>
                                <field name="employee"/>
                                <field name="department_lead"/>
                                <field name="create_date"/>
                                <field name="ot_total"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="ot_request_line" string="OT Request Line">
                            </page>
                        </notebook>
                </form>
            </field>
        </record>

        <record id="ot_request_tree_view" model="ir.ui.view">
            <field name="name">ot.request.tree.view</field>
            <field name="model">ot.request</field>
            <field name="arch" type="xml">
                <tree string="OT Requests" default_order="create_date desc">
                    <field name="project"/>
                    <field name="employee"/>
                    <field name="manager_approve"/>
                    <field name="ot_hours"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_request" model="ir.actions.act_window">
            <field name="name">OT Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ot.request</field>
            <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ot_request_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ot_request_form_view')})]"/>
        </record>

        <menuitem id="menu_ot_request"
            name="OT request"
            action="action_request"
            sequence="10"
            groups="base.group_user"/>

    </data>
</odoo>
